<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/main_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        app:srcCompat="@drawable/icon_menu" />

    <gui.SlideMenu
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/slide_menu_button"
        android:id="@+id/slideMenu">

    </gui.SlideMenu>

    <ImageButton
        android:id="@+id/slide_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/main_menu_button"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/icon_slidemenu_closed" />

    <ImageButton
        android:id="@+id/verified_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        app:srcCompat="@drawable/icon_verified" />


</RelativeLayout>